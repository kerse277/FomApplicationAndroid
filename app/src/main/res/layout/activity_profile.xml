<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.fom.msesoft.fomapplication.activity.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
      >

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="@string/profileNumberOfFriend"
            android:textColor="#010101"
            android:layout_below="@+id/profile_activity_friendSize"
            android:layout_alignLeft="@+id/profile_activity_friendSize"
            android:layout_alignStart="@+id/profile_activity_friendSize"
            android:textAlignment="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/profile_activity_friendSize"
            android:textColor="#000000"
            android:autoText="false"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_activity_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_activity_profileName"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_below="@+id/profile_activity_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_activity_hoby"
            android:layout_below="@+id/profile_activity_profileName"
            android:layout_alignLeft="@+id/profile_activity_profileName"
            android:layout_alignStart="@+id/profile_activity_profileName"
            android:textColor="#000000"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_activity_work"
            android:layout_below="@+id/profile_activity_hoby"
            android:layout_alignLeft="@+id/profile_activity_hoby"
            android:layout_alignStart="@+id/profile_activity_hoby"
            android:textColor="#000000"
            android:textSize="10dp" />

    </RelativeLayout>

</RelativeLayout>
